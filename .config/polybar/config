menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[module/vpncheck]
type = custom/script
exec = nmcli c show --active | ag vpn
interval = 5
label = vpn
format-underline = ${colors.secondary}
format-prefix = "ïƒ¬ "
format-prefix-foreground = #5b

[module/coretemps]
type = custom/script
interval = 1
exec-if = sensors
exec = ~/.config/polybar/tempcores.sh
