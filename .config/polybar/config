[colors]
;background = ${xrdb:color0:#222}
background = #b72350
background-alt = #c73360
foreground = #fff
foreground-alt = #fff
primary = #91f6f7
secondary = #71d6d7
alert = #4f249d

[bar/main]
;monitor = ${env:MONITOR:HDMI-1}
width = 1906
height = 30
offset-x = 7
#radius = 6.0
#fixed-center = true

