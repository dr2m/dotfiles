# Set personal aliases, overriding those provided by oh-my-zsh libs,
# plugins, and themes. Aliases can be placed here, though oh-my-zsh
# users are encouraged to define aliases within the ZSH_CUSTOM folder.
# For a full list of active aliases, run `alias`.
#
# Example aliases
# alias zshconfig="mate ~/.zshrc"
# alias ohmyzsh="mate ~/.oh-my-zsh"

# rubocopify index
alias ru="git status --porcelain | cut -c4- | grep '.rb' | xargs rubocop"

# rbenv
export PATH="$HOME/.rbenv/bin:$HOME/bin:$PATH"
eval "$(rbenv init -)"

. /usr/share/autojump/autojump.sh || true

# npm exec
alias ne='PATH="$(npm bin)":"$PATH"'
alias v='nvim'
alias cemacs='emacs --no-window-system'
alias c='cemacs'

alias -g xcopy='xclip -selection clipboard'
alias -g xpaste='xclip -selection clipboard -o'

# nvm
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# exercism competion
if [ -f ~/.config/exercism/exercism_completion.zsh ]; then
  . ~/.config/exercism/exercism_completion.zsh
fi

# view markdown
vmd () {
  pandoc $1 | lynx -stdin
}

get_window_id_by_class() {
  wmctrl -lx | cut -d' ' -f1,4 | ag $1 | cut -d' ' -f1
}

toggle_window_by_class() {
  id=`get_window_id_by_class $1`
  bspc node $id --flag hidden
  bspc node -f $id
}

qr() {
  printf $1 | curl -F-=\<- qrenco.de
}
